@model BakeNChew.ViewModels.ProductModelView




<div class="container mt-5 py-2">
    <h1 class="mt-5">
        Orders
    </h1>

    <table class="table table-hover shadow-sm">
        <thead>
            <tr>
                <th scope="col">Order Id</th>
                <th scope="col">Date</th>
                <th scope="col">Address</th>
                <th scope="col">Contact</th>
                <th scope="col">Total price</th>
                <th scope="col">Total Quantity</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var order in Model.orders)
            {
                <tr>
                    <th scope="row">@order.OrderId</th>
                    <th scope="row">@order.DateCreated</th>
                    <td>@order.UserAddress</td>
                    <td>@order.UserPhoneNumber</td>
                    <td>@order.Totalprice</td>
                    <td>@order.Totalquantity</td>
                    @* <td>Column content</td>
                        <td>Column content</td> *@
                </tr>
            }
        </tbody>
    </table>
</div>


@if (TempData["message"] != null)
{
    @* ----------------------------------------------------------------- *@
    <div id="exampleModalLive" class="modal fade show" tabindex="-1" role="dialog" aria-labelledby="exampleModalLiveLabel"
    style="display: block;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLiveLabel">Order Message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span onclick="myFunction()" aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@TempData["message"]</p>
                </div>
                <div class="modal-footer">
                    <button onclick="myFunction()" type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    @* <button type="button" class="btn btn-primary">Save changes</button> *@
                </div>
            </div>
        </div>
    </div>
}





@if (TempData["message"] != null)
{
    <script>
        $(function () {
        @* $("#exampleModal").modal("show"); *@
                alert('@TempData["message"]');
        });

        function myFunction() {
            document.getElementById("exampleModalLive").classList.remove("show");
            document.getElementById("exampleModalLive").style.display = "none";

        }
    </script>
}
@* @page *@
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>Login</h1>

<div class="container py-5 h-100 bg-dark">
    <div class="d-flex justify-content-center">
        <div class="col-md-8 col-lg-6 col-sm-12 shadow-lg py-4 px-5 bg-light text-center">
            <form method="post">
                <h2>Login</h2>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating py-2">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email" class="form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating py-2">
                    <input asp-for="Password" class="form-control" autocomplete="current-password"
                        aria-required="true" />
                    <label asp-for="Password" class="form-label"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="py-2">
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="py-2">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="d-flex flex-column align-items-end">
                    @* <p class="m-0">
                        <a class="text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Forgot your
                        password?</a>
                        </p> *@
                    <p class="m-0">
                        @* <a class="text-decoration-none" asp-page="./Register"
                            asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </p> *@
                        @* <p class="m-0">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p> *@
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
